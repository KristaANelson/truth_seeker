<h1> <%= @all_posts.inject(0) { |sum, page| sum + page['data'].count } %> </h1>

<p>
  <%= link_to("twitter stuff", twitter_path) %>
</p>

<% @all_posts.each do |page| %>
  <%= page['data'].first %>
  <% page['data'].each do |post| %>
    <% unless post['caption'].nil? %>
      <%= Time.at(post['caption']['created_time'].to_i).to_datetime %><br>
      <%= post['caption']['text'] %>
    <% end %>
    <% unless post['location'] == nil %>
      <%= post['location']['latitude'] %>
      <%= post['location']['longitude'] %><br>
      <%= image_tag(post['images']['standard_resolution']['url'], width: '20%', height: '20%') %><br><hr>
    <% end %>
  <% end %>
<% end %>
